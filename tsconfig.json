{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["esnext"], // Ensure only necessary libraries are included
    "types": ["node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitThis": false,
    "skipDefaultLibCheck": true
  },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
